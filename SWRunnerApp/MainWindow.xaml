<Window x:Class="SWRunnerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SWRunnerApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Main">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width ="250" MinWidth="250"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width ="*"/>
                    </Grid.ColumnDefinitions>
                    <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" />
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <GroupBox Header="Test" Grid.Row="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Button Content="Start Cairos" Grid.Column="0" Grid.Row="0" Margin="10" Click="button_Click" Name="btnCairos"/>
                                <Button Content="Cancel" Grid.Column="0" Grid.Row="1" Margin="10" IsEnabled="False"/>
                                <Button Content="Button" Grid.Column="1" Grid.Row="0" Margin="10" IsEnabled="False"/>
                                <Button Content="Button" Grid.Column="1" Grid.Row="1" Margin="10" IsEnabled="False"/>
                            </Grid>
                        </GroupBox>
                        <GroupBox Header="Test 2" Grid.Row="1">
                        </GroupBox>
                    </Grid>
                    <Grid Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="3*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <GroupBox Header="Logs" Grid.Row="0">
                            <TextBox Text="All log should be here" TextWrapping="Wrap" Name="log" TextChanged="Log_TextChanged" VerticalScrollBarVisibility="Visible"/>
                        </GroupBox>
                        <GroupBox Header="Drop Info" Grid.Row="1"/>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Settings">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
